<Page x:Class="GPG_Csharp.CapturePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Glyptics Portrait Generator">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgDepth" Grid.Column="0" Grid.Row="0" Opacity="0.5" Grid.ColumnSpan="3"/>
        <Image x:Name="imgColor" Grid.Column="0" Grid.Row="0" Opacity="0.5" Grid.ColumnSpan="3"/>
        <Button x:Name="button" Grid.Column="1" Grid.Row="1" Content="Capture" Margin="0,10,0,10" Height="30" Click="CaptureFrame"/>
    </Grid>
</Page>
