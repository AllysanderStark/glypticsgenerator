<Window x:Class="GPG_Csharp.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Closing="control_Closing"
        Title="Glyptics Portrait Generator" Height="700" Width="1200" x:Name="control" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Image x:Name="imgColor" Grid.Column="0" Margin="0,0,0,50" Opacity="0.8"/>
        <Image x:Name="imgDepth" Grid.Column="0" Margin="0,0,0,50" Opacity="0.2"/>
        <Button x:Name="button" Grid.Column="0" Content="Capture" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="150" Height="30" Click="CaptureFrame"/>
    </Grid>
</Window>
